<div id="blue-wrapper">

	<div id="heart-img">
		<%= image_tag("blue-heart.png", :alt => "Heart & Dots") %>
	</div> 

	<div id="main-title">
		Everybody Loves Emmy Lou Bug
	</div>

	<div class="lg-grey" id="heart-text">
		…and on this valentines day, you are invited to play a game with…
	</div>
	
	<div id="platto">
		<div id="platto-img">
			<%= image_tag("waving-monsty.png", :alt => "Waving-Monsty") %>
		</div> 
		<div class="lg-grey" id="platto-text">
			...the one and only<br>
			Blue Monsty!
		</div>
	</div>

	<div class="lg-grey" id="end-text">
		Would you like to play?
	</div>

	<div id="menu">
		<div class="face-btn" id="smile">
			<%= link_to level_one_path do %>
				I would<br>
				<i class="fa fa-smile-o fa-4x"></i>
			<% end %>
		</div>
		<div class="face-btn" id="sad">
			I wouldn't<br>
			<i class="fa fa-frown-o fa-4x"></i>
		</div>
	</div>

</div>